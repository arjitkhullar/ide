{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "typescript-eslint-parser"
  },
  "extends": ["eslint:recommended", "plugin:vue/recommended", "typescript"],
  "rules": {
    "semi": ["error", "never"],
    "no-console": "off",
    "indent": "off",
    "vue/max-attributes-per-line": [
      4,
      {
        "singleline": 4,
        "multiline": {
          "max": 1,
          "allowFirstLine": true
        }
      }
    ],
    "no-extra-semi": "off"
  }
}
